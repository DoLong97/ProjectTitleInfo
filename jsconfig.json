{
    "compilerOptions": {
        "baseUrl": "src",
        "target": "ES6",
        "module": "commonjs",
        "allowSyntheticDefaultImports": true,
        "jsx": "react",
        "paths": {
            "@Root/*": ["./src/*"],
            "@Components/*": ["./src/components/*"],
            "@Pages/*": ["./src/pages/*"],
            "@Assets/*": ["./src/assets/*"],
        }
    },
    "include": [
        "src"
    ],
    "exclude": [
        "build",
        "node_modules"
    ]
}
